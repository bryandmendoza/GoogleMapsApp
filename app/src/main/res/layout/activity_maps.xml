<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MapsActivity" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/lytPolyline"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:id="@+id/btnDrawPolyline"
            android:background="@color/purple_500"
            android:textColor="@color/white"
            android:text="Dibujar Polyline" />

    </LinearLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="15dp"
        android:tooltipText="Tipo de mapa"
        fab:menu_fab_size="normal"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_colorNormal="@color/purple_500"
        fab:menu_colorPressed="@color/purple_700"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_animationDelayPerItem="50"
        fab:menu_icon="@drawable/ic_baseline_settings_24"
        fab:menu_buttonSpacing="0dp"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_textColor="#FFFFFF"
        fab:menu_labels_textSize="14sp"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_colorNormal="#333333"
        fab:menu_labels_colorPressed="#444444"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"
        fab:menu_openDirection="down"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_fab_label="Opciones" >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btnPolyline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_baseline_timeline_24"
            app:fab_colorNormal="@color/purple_500"
            app:fab_colorPressed="@color/purple_700"
            app:fab_colorRipple="#99FFFFFF"
            app:fab_showShadow="true"
            app:fab_shadowColor="#66000000"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="1dp"
            app:fab_shadowYOffset="3dp"
            app:fab_size="mini"
            app:fab_showAnimation="@anim/fab_slide_in_from_right"
            app:fab_hideAnimation="@anim/fab_slide_out_to_right"
            app:fab_label="Polyline"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btnMarker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_baseline_place_24"
            app:fab_colorNormal="@color/purple_500"
            app:fab_colorPressed="@color/purple_700"
            app:fab_colorRipple="#99FFFFFF"
            app:fab_showShadow="true"
            app:fab_shadowColor="#66000000"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="1dp"
            app:fab_shadowYOffset="3dp"
            app:fab_size="mini"
            app:fab_showAnimation="@anim/fab_slide_in_from_right"
            app:fab_hideAnimation="@anim/fab_slide_out_to_right"
            app:fab_label="Marcador"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btnPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_baseline_my_location_24"
            app:fab_colorNormal="@color/purple_500"
            app:fab_colorPressed="@color/purple_700"
            app:fab_colorRipple="#99FFFFFF"
            app:fab_showShadow="true"
            app:fab_shadowColor="#66000000"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="1dp"
            app:fab_shadowYOffset="3dp"
            app:fab_size="mini"
            app:fab_showAnimation="@anim/fab_slide_in_from_right"
            app:fab_hideAnimation="@anim/fab_slide_out_to_right"
            app:fab_label="PosiciÃ³n"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btnAnimate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_baseline_moving_24"
            app:fab_colorNormal="@color/purple_500"
            app:fab_colorPressed="@color/purple_700"
            app:fab_colorRipple="#99FFFFFF"
            app:fab_showShadow="true"
            app:fab_shadowColor="#66000000"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="1dp"
            app:fab_shadowYOffset="3dp"
            app:fab_size="mini"
            app:fab_showAnimation="@anim/fab_slide_in_from_right"
            app:fab_hideAnimation="@anim/fab_slide_out_to_right"
            app:fab_label="Animar (Quevedo)"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btnMove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_baseline_moving_24"
            app:fab_colorNormal="@color/purple_500"
            app:fab_colorPressed="@color/purple_700"
            app:fab_colorRipple="#99FFFFFF"
            app:fab_hideAnimation="@anim/fab_slide_out_to_right"
            app:fab_label="Mover (Quevedo)"
            app:fab_shadowColor="#66000000"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="1dp"
            app:fab_shadowYOffset="3dp"
            app:fab_showAnimation="@anim/fab_slide_in_from_right"
            app:fab_showShadow="true"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btnMapType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_baseline_map_24"
            app:fab_colorNormal="@color/purple_500"
            app:fab_colorPressed="@color/purple_700"
            app:fab_colorRipple="#99FFFFFF"
            app:fab_showShadow="true"
            app:fab_shadowColor="#66000000"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="1dp"
            app:fab_shadowYOffset="3dp"
            app:fab_size="mini"
            app:fab_showAnimation="@anim/fab_slide_in_from_right"
            app:fab_hideAnimation="@anim/fab_slide_out_to_right"
            app:fab_label="Tipo de mapa"/>

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>